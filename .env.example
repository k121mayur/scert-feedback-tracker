# NIPUN Teachers Portal - Environment Variables Template

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
PGHOST=localhost
PGPORT=5432
PGUSER=nipun_user
PGPASSWORD=secure_password_123
PGDATABASE=nipun_teachers

# Application Configuration
NODE_ENV=production
PORT=5000
UV_THREADPOOL_SIZE=128

# Security Configuration
SESSION_SECRET=your_super_secure_session_secret_here_at_least_32_chars

# Performance Configuration
MAX_CONNECTIONS=500
KEEP_ALIVE_TIMEOUT=120000
CONNECTION_BACKLOG=2048

# Optional: Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379

# Optional: Email Configuration (if implementing notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_app_password

# AWS Configuration (for AWS deployment)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Domain Configuration
DOMAIN_NAME=nipun-teachers.your-domain.com

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true